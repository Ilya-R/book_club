<h5>Рейтинг книги: <%= show_rating_score(@book) %> из
  10. <%= ("Ваша оценка: #{@book.book_user_ratings.where(user: current_user).take.rating}") if user_signed_in? && @book.book_user_ratings.where(user: current_user).exists? %> </h5>

<% if user_signed_in? && !@book.book_user_ratings.where(user: current_user).exists? %>

    <%= form_for [@book, book_user_rating] do |f| %>

        <div class="btn-group" data-toggle="buttons">

          <label class="btn btn-warning btn-sm">
            <%= f.radio_button(:rating, '1') %>
            1
          </label>

          <label class="btn btn-warning btn-sm">
            <%= f.radio_button(:rating, '2') %>
            2
          </label>

          <label class="btn btn-warning btn-sm">
            <%= f.radio_button(:rating, '3') %>
            3
          </label>

          <label class="btn btn-warning btn-sm">
            <%= f.radio_button(:rating, '4') %>
            4
          </label>

          <label class="btn btn-warning btn-sm">
            <%= f.radio_button(:rating, '5') %>
            5
          </label>

          <label class="btn btn-warning btn-sm">
            <%= f.radio_button(:rating, '6') %>
            6
          </label>

          <label class="btn btn-warning btn-sm">
            <%= f.radio_button(:rating, '7') %>
            7
          </label>

          <label class="btn btn-warning btn-sm">
            <%= f.radio_button(:rating, '8') %>
            8
          </label>

          <label class="btn btn-warning btn-sm">
            <%= f.radio_button(:rating, '9') %>
            9
          </label>

          <label class="btn btn-warning btn-sm">
            <%= f.radio_button(:rating, '10') %>
            10
          </label>
        </div>

        <%= f.submit 'Голосовать', class: 'btn btn-secondary  btn-sm' %>

    <% end %>

<% end %>